<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/galagaFrameLayout"
        android:background="@drawable/cloud"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <TextView
                    android:id="@+id/blocks1"
                    android:layout_width="130dp"
                    android:layout_height="101dp"
                    android:background="@drawable/ic_balloons_blue"

            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <TextView
                    android:id="@+id/blocks2"
                    android:layout_width="130dp"
                    android:layout_height="101dp"
                    android:background="@drawable/ic_balloons_gold"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <TextView
                    android:id="@+id/blocks3"
                    android:layout_width="130dp"
                    android:layout_height="101dp"
                    android:background="@drawable/ic_balloons_blue"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
    >
        <TextView
                android:id="@+id/blocks4"
                android:layout_width="130dp"
                android:layout_height="101dp"
                android:background="@drawable/ic_balloons_morada"
        />
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <TextView
                    android:layout_marginTop="100dp"
                    android:id="@+id/nave"
                    android:layout_width="130dp"
                    android:layout_height="101dp"
                    android:background="@drawable/ic_ufo_dark_blue"
            />
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/bullet"
            android:layout_width="102dp"
            android:layout_height="72dp"
            android:background="@drawable/ic_fire_ray"
    />

</FrameLayout>