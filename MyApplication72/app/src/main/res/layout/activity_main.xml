<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background_galata2"
        tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                >

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                    >
                        <TextView
                                android:id="@+id/asteroid_one"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/ic_asteroid"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                    >
                        <TextView
                                android:id="@+id/asteroid_two"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/ic_asteroid"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                    >
                        <TextView
                                android:id="@+id/asteroid_three"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/ic_asteroid"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                    >
                        <TextView
                                android:id="@+id/asteroid_four"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/ic_asteroid"
                        />
                    </LinearLayout>

                </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/nave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/ic_stealth_bomber"
    />
</FrameLayout>