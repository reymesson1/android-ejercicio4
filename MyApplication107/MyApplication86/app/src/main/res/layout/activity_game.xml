<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/galagaFrameLayout"
        android:background="@drawable/ic_background_galata2"
        tools:context=".GameActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
        >

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
            >
                <TextView
                        android:id="@+id/asteroid_one"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_asteroid"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
            >
                <TextView
                        android:id="@+id/asteroid_two"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_asteroid"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
            >
                <TextView
                        android:id="@+id/asteroid_three"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_asteroid"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
            >
                <TextView
                        android:id="@+id/asteroid_four"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_asteroid"
                />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/nave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/ic_stealth_bomber"/>
    <TextView
            android:id="@+id/bullet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/ic_bullet2"/>
    <TextView
            android:layout_marginTop="500dp"
            android:id="@+id/textViewData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="10:00"
            android:textSize="30dp"
    />
    <TextView
            android:layout_marginTop="450dp"
            android:id="@+id/textViewData2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="10:00"
            android:textSize="30dp"
    />
    />

</FrameLayout>